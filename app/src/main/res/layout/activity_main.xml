<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gnome.tune.tunegnome.activities.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:text="db"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here to start measuring sound in decibels"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="41dp" />

    <Button
        android:id="@+id/startSoundMeasureBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start measurement"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="-147dp" />

    <TextView
        android:id="@+id/noiseValueTextView"
        android:layout_width="82dp"
        android:layout_height="32dp"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current sound level:"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:id="@+id/currentSoundLvlTextView"
        android:layout_width="8dp"
        android:layout_height="29dp"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="313dp"
        tools:layout_editor_absoluteY="266dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startMeasureNoiseLevel"
        android:text="Start measuring noise level"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="88dp" />

</android.support.constraint.ConstraintLayout>
